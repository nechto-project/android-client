<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/steady">

        <Constraint android:id="@id/topCard">

            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>

        <Constraint android:id="@id/bottomCard">

            <Layout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Transform
                android:scaleX="0.9"
                android:scaleY="0.9" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/dislike"
        app:deriveConstraintsFrom="@id/steady">

        <Constraint android:id="@id/topCard">

            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="300dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintWidth_percent="0.7" />

            <Transform
                android:scaleX="0.95"
                android:scaleY="0.95" />
        </Constraint>

        <Constraint android:id="@id/bottomCard">

            <Transform
                android:scaleX="0.95"
                android:scaleY="0.95" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/like"
        app:deriveConstraintsFrom="@id/steady">

        <Constraint android:id="@id/topCard">

            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="300dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintWidth_percent="0.7" />

            <Transform
                android:scaleX="0.95"
                android:scaleY="0.95" />
        </Constraint>

        <Constraint android:id="@id/bottomCard">

            <Transform
                android:scaleX="0.95"
                android:scaleY="0.95" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/offScreenLike"
        app:deriveConstraintsFrom="@id/like">

        <Constraint android:id="@id/topCard">

            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="300dp"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintWidth_percent="0.7" />

            <Transform
                android:scaleX="0.9"
                android:scaleY="0.9" />
        </Constraint>

        <Constraint android:id="@id/bottomCard">

            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/offScreenDislike"
        app:deriveConstraintsFrom="@id/dislike">

        <Constraint android:id="@id/topCard">

            <Layout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="300dp"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintWidth_percent="0.7" />

            <Transform
                android:scaleX="0.9"
                android:scaleY="0.9" />
        </Constraint>

        <Constraint android:id="@id/bottomCard">

            <Transform
                android:scaleX="1"
                android:scaleY="1" />
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@id/dislike"
        app:constraintSetStart="@id/steady"
        app:duration="700">

        <OnSwipe
            app:dragDirection="dragLeft"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@id/topCard"
            app:touchAnchorSide="left"
            app:touchRegionId="@id/topCard" />
    </Transition>

    <Transition
        app:constraintSetEnd="@+id/like"
        app:constraintSetStart="@id/steady"
        app:duration="700">

        <OnSwipe
            app:dragDirection="dragRight"
            app:onTouchUp="autoComplete"
            app:touchAnchorId="@+id/topCard"
            app:touchAnchorSide="right"
            app:touchRegionId="@id/topCard" />
    </Transition>

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/offScreenLike"
        app:constraintSetStart="@id/like"
        app:duration="300" />

    <Transition
        app:autoTransition="animateToEnd"
        app:constraintSetEnd="@id/offScreenDislike"
        app:constraintSetStart="@id/dislike"
        app:duration="300" />
</MotionScene>
